#include<iostream>
using namespace std;
int main()
{
    long long int t,n,day=0,count,c,k=0;
    cin>>t;
    while(t--)
    {         day=0;
              cin>>n;
              long long int a[n];
              for(long int i=0;i<n;i++)
              {
                     cin>>a[i];
                     }
                    count=1;
                    count=1+a[0];
                    day++;
                    c=a[0];
                    k=1;
              while(count<n)
              { 
               for(long int i=k;i<count;i++)
               {       
                       c+=a[i];
                       k++;
                       }
                      count+=c;
                      day++;
                       }
              cout<<day<<endl;
              }
              
              }

